    "remove-files-webpack-plugin": "^1.5.0",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "web-ext": "^7.8.0",
    "webpack": "^5.90.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^4.10.0",
    "webpack-extension-reloader": "^1.1.4"
  }
}
