{
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Anoma Extension"
  },
  "background": {
    "scripts": ["background.anoma.js"],
    "persistent": true
  },
  "permissions": ["storage", "notifications", "identity"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.anoma.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["injected.anoma.js", "assets/app.css"]
}
