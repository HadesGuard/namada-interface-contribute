{
  "git": {
    "commit": false,
    "tag": false,
    "push": false,
    "requireCleanWorkingDir": false,
    "requireCommits": true,
    "changelog": false
  },
  "npm": {
    "publish": false,
    "versionArgs": ["--workspaces-update=false"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md",
      "gitRawCommitsOpts": {
        "path": "."
      }
    }
  },
  "hooks": {
    "after:bump": "in=\"$(cat ../types/package.json | jq '.version')\" && out=\"$(jq '.dependencies.\"@namada/types\" = '$in'' package.json)\" && echo \"$out\" > package.json"
  }
}
