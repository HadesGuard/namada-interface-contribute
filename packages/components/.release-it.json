{
  "git": {
    "commit": false,
    "tag": false,
    "push": false,
    "requireCleanWorkingDir": false,
    "changelog": false
  },
  "npm": {
    "publish": false,
    "versionArgs": ["--workspaces-update=false"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md",
      "gitRawCommitsOpts": {
        "path": "."
      }
    }
  },
  "@release-it/bumper": {
    "out": {
      "file": "package.json",
      "path": ["dependencies.@namada/utils"]
    }
  }
}
