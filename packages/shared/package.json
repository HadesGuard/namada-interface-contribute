{
  "name": "@anoma/shared",
  "version": "0.1.0",
  "description": "Anoma shared functionality",
  "main": "src/index.ts",
  "repository": "https://github.com/anoma/namada-interface/",
  "author": "Heliax Dev <info@heliax.dev>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build:wasm-st": "wasm-pack build lib --target web --out-dir ../src/shared/st",
    "build:wasm-mt": "cross-env RUSTFLAGS=\"-C target-feature=+atomics,+bulk-memory,+mutable-globals\" rustup run nightly-2022-12-12 wasm-pack build lib --target web --out-dir ../src/shared/mt -- --features parallel -Z build-std=panic_abort,std",
    "wasm:build": "yarn build:wasm-st & yarn build:wasm-mt",
    "wasm:build:node": "./scripts/build-test.sh",
    "test": "yarn wasm:build:node && yarn jest",
    "test:watch": "yarn test --watch"
  },
  "dependencies": {
    "typescript": "^4.8.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.0.3",
    "babel-jest": "^29.0.3",
    "cross-env": "^7.0.3",
    "jest": "^29.0.3",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1"
  }
}
