{
  "git": {
    "commit": false,
    "tag": false,
    "push": false,
    "requireCleanWorkingDir": false,
    "tagName": "namada-",
    "tagMatch": "namada-*"
  },
  "npm": {
    "publish": false,
    "versionArgs": ["--workspaces-update=false"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md",
      "gitRawCommitsOpts": {
        "path": "."
      }
    }
  }
}
